<div class="page">
  <div class="header">

    {{#with header}}
    <header class="header_content">
      <div class="header_block">
        <img src="/svg/apple.svg" alt="Apple" class="header_icon">
        <nav class="header_block">
          {{#each links}}
          <a href="{{url}}" class="header_link">{{text}}</a>
          {{/each}}
        </nav>
      </div>
      <div class="header_block">
        <img src="/svg/search.svg" alt="Search" class="header_icon">
        <img src="/svg/profile.svg" alt="Profile" class="header_icon">
      </div>
    </header>
    {{/with}}
  </div>

  <div class="header_ad">
    <div class="header_content">
      {{#with header.ad}}
      <p class="ad_title">{{title}}</p>
      <div>
        <a href="{{link.url}}" class="header_ad_link">{{link.text}}</a>
        <img src="/svg/arrow.svg" alt="arrow" class="header_ad_icon">
      </div>
      {{/with}}
    </div>
  </div>


  {{#with iphone_pro}}
  <section class="product product_big product_iphone_pro product_dark product_top">
    <div class="product_content">
      <h1 class="product_title">{{title}}</h1>
      <p class="product_descriptions"> {{descriptions}}</p>
      <div class="product_action">
        {{#with link}}
        {{#each text}}
        <a href="{{../link}}" class="product_link">{{this}}</a>
        {{/each}}
        {{/with}}
      </div>
    </div>
  </section>
  {{/with}}

